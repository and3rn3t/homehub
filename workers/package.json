{
  "name": "homehub-kv-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker for HomeHub KV storage",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --local --persist-to=.wrangler/state",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm"
  },
  "keywords": [
    "cloudflare",
    "worker",
    "kv"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251008.0",
    "esbuild": "^0.25.10",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.7.2",
    "wrangler": "^4.43.0"
  }
}
